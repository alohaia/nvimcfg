snippet "(= )?H1" "First heading" rbA
= ${1:`!v expand('%:t:r')`} =
$0
endsnippet

snippet = "First heading" b
= ${1:`!v  expand('%:t:r')`} =
$0
endsnippet

snippet "h([1-6])" "Headings" rbA
`!p snip.rv = '=' * int(match.group(1)) ` ${1:${VISUAL}} `!p snip.rv = '=' * int(match.group(1))`
$0
endsnippet

snippet mcd "multi-line code" bA
{{{ $1
${2:${VISUAL}}
}}}
$0
endsnippet

