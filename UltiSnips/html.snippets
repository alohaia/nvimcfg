# endsnippet

snippet html:xml "" w
<html xmlns="http://www.w3.org/1999/xhtml">${0:${VISUAL}}</html>
endsnippet

snippet input "input tag" w
<input type="${1:text}"$2>
endsnippet

snippet "input:t(ext)?" "input tag(text)" rw
<input type="text" name="$1"$2>
endsnippet

snippet "input:b(utton)?" "input tag(button)" rw
<input type="button" value="$1"$2>
endsnippet

snippet style "style tag" w
<style>$1</style>
endsnippet

snippet style:src "style tag(with src)" w
<style src="$1">$2</style>
endsnippet

snippet script "script tag" w
<script>$1</script>
endsnippet

snippet script:src "script tag(with src)" w
<script src="$1">$2</script>
endsnippet

snippet a "a tag" w
<a href="$1">$2</a>
endsnippet

